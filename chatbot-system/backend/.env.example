# Application Settings
APP_NAME="Financial Case Management Chatbot"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000"]

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# ==============================================
# LLM Provider Configuration
# ==============================================

# Eliza Configuration (Primary LLM Provider)
ELIZA_CERT_PATH=/path/to/eliza/cert
ELIZA_PRIVATE_KEY_PATH=/path/to/eliza/key
ELIZA_ENV=QA
ELIZA_DEFAULT_MODEL=llama-3.3
ELIZA_TIMEOUT=30
ELIZA_RETRY_ATTEMPTS=3

# OpenAI Configuration (Alternative Provider)
OPENAI_API_KEY=sk-...your-openai-api-key...
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3
# OPENAI_ORGANIZATION_ID=org-...  # Optional

# Anthropic Configuration (Alternative Provider)
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-api-key...
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_TIMEOUT=60
ANTHROPIC_MAX_RETRIES=3

# LiteLLM Configuration (Unified Provider - Optional)
# Supports 100+ LLM providers through one interface
LITELLM_API_KEY=...your-litellm-api-key...
LITELLM_MODEL=gpt-3.5-turbo  # Or any model supported by LiteLLM
LITELLM_BASE_URL=https://api.litellm.ai
LITELLM_TIMEOUT=60
LITELLM_MAX_RETRIES=3

# LangChain Configuration (Optional - for tracing and debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=...your-langchain-api-key...
LANGCHAIN_PROJECT=chatbot-project

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=chatbot_db
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=your_password_here
POSTGRES_POOL_SIZE=20

# Database Configuration - Oracle
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=ORCL
ORACLE_USER=chatbot_user
ORACLE_PASSWORD=your_password_here
ORACLE_POOL_MIN=5
ORACLE_POOL_MAX=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_TTL=3600

# ==============================================
# External API Configuration
# ==============================================

# REST API Configuration
REST_API_BASE_URL=https://api.example.com
REST_API_KEY=your_api_key_here
REST_API_USERNAME=api_user  # If using basic auth
REST_API_PASSWORD=api_password  # If using basic auth
REST_API_AUTH_TYPE=bearer  # Options: bearer, basic, api_key, none
REST_API_TIMEOUT=30
REST_API_RETRY_ATTEMPTS=3

# SOAP API Configuration
SOAP_WSDL_URL=http://example.com/service?wsdl
SOAP_ENDPOINT_URL=http://example.com/service
SOAP_USERNAME=soap_user
SOAP_PASSWORD=soap_password
SOAP_VERSION=1.1  # SOAP version: 1.1 or 1.2
SOAP_TIMEOUT=30

# Legacy External API (kept for backward compatibility)
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your_api_key_here
EXTERNAL_API_TIMEOUT=30

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/chatbot/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ==============================================
# Feature Flags
# ==============================================

# LangGraph Multi-Agent Orchestration
USE_LANGGRAPH=false
LANGGRAPH_ENABLE_PARALLEL=true
LANGGRAPH_ENABLE_CACHING=true
LANGGRAPH_MAX_ITERATIONS=10
LANGGRAPH_TIMEOUT=300
LANGGRAPH_LOG_LEVEL=INFO

# LLM Streaming Configuration
ENABLE_LLM_STREAMING=true
LLM_STREAMING_CHUNK_SIZE=5
LLM_STREAMING_DELAY_MS=50

# Visualization Configuration
ENABLE_VISUALIZATIONS=true
VISUALIZATION_MIN_DATA_POINTS=2
VISUALIZATION_MAX_DATA_POINTS=100
VISUALIZATION_DELAY_MS=100
VISUALIZATION_DEFAULT_COLORS='["#8884d8", "#82ca9d", "#ffc658", "#ff7c7c", "#8dd1e1"]'