# ==============================================
# Frontend Environment Configuration
# ==============================================
# Copy this file to .env and update with your values

# ==============================================
# API Configuration
# ==============================================
VITE_API_BASE_URL=http://localhost:8000
VITE_API_PREFIX=/api/v1

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws/chat

# ==============================================
# Application Settings
# ==============================================
VITE_APP_NAME=Financial Case Management Chatbot
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable features
VITE_ENABLE_MARKDOWN=true
VITE_ENABLE_CHARTS=true
VITE_ENABLE_FILE_UPLOAD=false
VITE_ENABLE_VOICE_INPUT=false

# Message Configuration
VITE_MAX_MESSAGE_LENGTH=4000
VITE_MAX_MESSAGES_HISTORY=100

# ==============================================
# WebSocket Settings
# ==============================================
# Reconnection settings
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=1000
VITE_WS_MAX_RECONNECT_DELAY=30000

# Heartbeat/ping settings
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_PING_TIMEOUT=5000

# ==============================================
# UI Configuration
# ==============================================
# Theme
VITE_DEFAULT_THEME=light  # light, dark, or auto
VITE_ENABLE_THEME_TOGGLE=true

# Chat Widget
VITE_CHAT_WIDGET_POSITION=bottom-right  # bottom-right, bottom-left, top-right, top-left
VITE_CHAT_WIDGET_WIDTH=400
VITE_CHAT_WIDGET_HEIGHT=600

# ==============================================
# Debug & Logging
# ==============================================
VITE_DEBUG=false
VITE_LOG_LEVEL=info  # debug, info, warn, error
VITE_ENABLE_CONSOLE_LOGS=true

# ==============================================
# Performance
# ==============================================
# Caching
VITE_ENABLE_MESSAGE_CACHE=true
VITE_CACHE_SIZE=50

# Lazy loading
VITE_ENABLE_LAZY_LOAD=true

# ==============================================
# Analytics (Optional)
# ==============================================
# VITE_ANALYTICS_ENABLED=false
# VITE_ANALYTICS_TRACKING_ID=
# VITE_SENTRY_DSN=

# ==============================================
# Parent-Child Communication
# ==============================================
# Event names for parent-child communication
VITE_EVENT_FILTER_UPDATE=chatbot:filter:update
VITE_EVENT_CONTEXT_UPDATE=chatbot:context:update
VITE_EVENT_ACTION_REQUEST=chatbot:action:request
